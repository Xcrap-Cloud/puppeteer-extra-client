{
  "compilerOptions": {
    "target": "es2019",                                  
    "module": "NodeNext",
    "declaration": true,                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"                                 
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./dist"]
}